= wrap_layout :layout do
  %article.container
    %h1.entry-title= current_page.title
    .two-column
      %aside.complementary(role="complementary")
      %main.main.hentry(role="main")

        %p
          %time.caps.published(datetime="#{current_article.date.strftime('%Y')}-#{current_article.date.strftime('%m')}-#{current_article.date.strftime('%d')} #{current_article.date.strftime('%H:%M:%S')}")
            = current_article.date

        .video.embed-responsive.embed-responsive-16by9
          %iframe.embed-responsive-item{:width=>"560",:height=>"315",
            :src=>"https://www.youtube.com/embed/#{current_page.data.video}?rel=0",
            :frameborder=>"0",:allowfullscreen=>"",
            :allow=>"autoplay; encrypted-media"}

        .entry-content= yield
